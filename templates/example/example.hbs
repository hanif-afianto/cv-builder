<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>{{profile.name}}</title>
<style>
{{{css}}}
</style>
</head>
<body>

<header>
  <h1>{{profile.name}}</h1>
  <div class="contact-info">
    <span>Email: <a href="mailto:{{profile.email}}">{{profile.email}}</a></span>
    <span>Phone: <a href="https://wa.me/{{phoneDigits profile.phone}}">{{profile.phone}}</a></span>
    {{#if profile.linkedin}}<span>LinkedIn: <a href="https://{{profile.linkedin}}">{{profile.linkedin}}</a></span>{{/if}}
    {{#if profile.github}}<span>GitHub: <a href="https://{{profile.github}}">{{profile.github}}</a></span>{{/if}}
  </div>
</header>

<main>
  {{#if profile.summary}}
  <section>
    <h3>SUMMARY</h3>
    <p>{{profile.summary}}</p>
  </section>
  {{/if}}

  <section>
    <h3>EXPERIENCE</h3>
    {{#each experience}}
      <div class="job">
        <div class="job-header">
          <strong>{{role}}</strong>
          <span>{{period}}</span>
        </div>
        <div class="job-sub">
          <em>{{company}}</em>
          <span>{{type}}</span>
        </div>
        {{#if project}}
        {{#each project}}
        <p class="project-label">Project: <strong>{{name}}</strong></p>
        {{#if activities-and-responsibilities}}
        <ul>
          {{#each activities-and-responsibilities}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
        {{/if}}
        {{#if expertise}}
        <p class="inline-tags"><strong>Expertise:</strong> {{#each expertise}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</p>
        {{/if}}
        {{#if technologies}}
        <p class="inline-tags"><strong>Technologies:</strong> {{#each technologies}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</p>
        {{/if}}
        {{/each}}
        {{else}}
        {{#if activities-and-responsibilities}}
        <ul>
          {{#each activities-and-responsibilities}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
        {{/if}}
        {{#if expertise}}
        <p class="inline-tags"><strong>Expertise:</strong> {{#each expertise}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</p>
        {{/if}}
        {{#if technologies}}
        <p class="inline-tags"><strong>Technologies:</strong> {{#each technologies}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</p>
        {{/if}}
        {{/if}}
      </div>
    {{/each}}
  </section>

  <section>
    <h3>SKILLS</h3>
    <div class="skills-grid">
      {{#each techstack}}
        <p><strong>{{name}}:</strong> 
        {{#each items}}
          {{this}}{{#unless @last}}, {{/unless}}
        {{/each}}
        </p>
      {{/each}}
    </div>
  </section>

  <section>
    <h3>EDUCATION</h3>
    {{#each education}}
      <div class="education-item">
        <div class="edu-header">
          <strong>{{institution}}</strong>
          <span>{{period}}</span>
        </div>
        <div class="edu-sub">
          {{name}}
        </div>
      </div>
    {{/each}}
  </section>

  {{#if languages}}
  <section>
    <h3>LANGUAGES</h3>
    <p>
    {{#each languages}}
      {{name}} ({{level}}){{#unless @last}}, {{/unless}}
    {{/each}}
    </p>
  </section>
  {{/if}}
</main>

</body>
</html>
